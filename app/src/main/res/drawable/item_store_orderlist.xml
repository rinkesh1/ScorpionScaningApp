<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <MaterialTextView
        android:id="@+id/tv_store_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:background="@drawable/right_border_table_cell"
        android:padding="@dimen/dimen_ten"
        android:text="91001987545"
        android:textColor="@color/colorlabel"
        android:textSize="@dimen/dimen_medium"
        android:textStyle="bold"
        />

    <MaterialTextView
        android:id="@+id/tv_order_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:background="@drawable/right_border_table_cell"
        android:gravity="right"
        android:padding="@dimen/dimen_ten"
        android:text="50"
        android:textColor="@color/colorlabel"
        android:textSize="@dimen/dimen_medium"
        android:textStyle="bold"
        />

    <MaterialTextView
        android:id="@+id/tv_totalqty_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:gravity="right"
        android:padding="@dimen/dimen_ten"
        android:text="50"
        android:textColor="@color/colorlabel"
        android:textSize="@dimen/dimen_medium"
        android:textStyle="bold"
        />

</TableRow>