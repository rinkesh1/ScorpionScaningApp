<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="customTextView_NormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_font_medium</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--Used while getting value from user like registration and authentication only-->

    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Button.Primary.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CustomTextInput" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="background">@color/transparent</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded
        </item>
    </style>

    <!--Used while taking user entry-->
    <style name="customEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_btn_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/dimen_eight</item>
        <item name="android:paddingBottom">@dimen/dimen_eight</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">@dimen/dimen_twelve</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorLabel</item>
        <item name="android:textSize">@dimen/dimen_text_medium</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>
    <!--Used for custom buttom-->
    <style name="customButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_btn_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dimen_text_medium</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:radius">@dimen/dimen_eight</item>
    </style>

    <!--Used for Highlighted labels-->
    <style name="customTextHighlighted">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/dimen_text_small</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="customTextViewHeaderTwo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/app_default_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ls_scan_summary_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ls_scan_summary_labelText">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_weight">0.40</item>-->
        <item name="android:textSize">@dimen/default_font_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="ls_scan_summary_divider_colon">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_weight">0.05</item>-->
        <item name="android:textSize">@dimen/default_font_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/material_black</item>
        <item name="android:text">:</item>
    </style>

    <style name="ls_scan_summary_valueText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_weight">1</item>-->
        <!--<item name="android:minLines">1</item>-->
        <!--<item name="android:maxLines">4</item>-->
        <item name="android:textSize">@dimen/default_font_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/material_black</item>
    </style>

    <!--Used for dialog headers labels-->
    <style name="customDialogHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorLabel</item>
    </style>

    <!--  Custom Divider  -->
    <style name="CustomDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorHint</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!--Used for extra labels-->
    <style name="customTextNormal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorLabel</item>
    </style>

    <!--Used for Dialog-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>