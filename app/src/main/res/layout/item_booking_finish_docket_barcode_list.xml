<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_scannedRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:backgroundTint="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dimen_card_corner_radius"
    app:cardElevation="@dimen/dimen_card_elivation_value">

    <LinearLayout
        android:id="@+id/ll_scannedBarcode"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_eight"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                tools:ignore="UselessParent">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_docket"
                        style="@style/customTextHighlighted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_five"
                        android:layout_marginRight="@dimen/dimen_five"
                        android:ellipsize="end"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="Docket"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_fourteen" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_scanPkg"
                            style="@style/customTextHighlighted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans_semibold"
                            android:maxLines="1"
                            android:text="pkg"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_fourteen" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/customTextHighlighted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_five"
                            android:layout_marginRight="@dimen/dimen_five"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans_semibold"
                            android:maxLines="1"
                            android:text="/"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_fourteen" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_totalPkg"
                            style="@style/customTextHighlighted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/open_sans_semibold"
                            android:maxLines="1"
                            android:text="pkg"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_fourteen" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>