<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_corner_round_drawable"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_10ssp"
        android:padding="7dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3dp"
            android:text="Alert"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#37474F"
            app:fontFamily="serif" />
        <ImageButton
            android:visibility="gone"
            android:id="@+id/bt_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:srcCompat="@mipmap/ic_close" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lineSpacingExtra="3dp"
            android:text="Do you want to mark Damage Packages..?"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#37474F"
            app:fontFamily="serif" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_gravity="right">
        <!--android:background="@drawable/btn_rect_teal"-->
        <Button
            android:id="@+id/bt_cancel"
            style="@style/Button.Primary.Borderless"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/blue_A700"
            android:layout_gravity="right"
            app:fontFamily="serif" />

        <View
            android:layout_width="@dimen/_10ssp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/bt_accept"
            style="@style/Button.Primary.Borderless"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/blue_A700"
            android:layout_gravity="right"
            app:fontFamily="serif" />

    </LinearLayout>
</LinearLayout>